<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/maim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/uId7"
            android:layout_width="370dp"
            android:layout_height="53dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="21dp"
            android:background="#FDFDFD"
            android:hint="Enter Your Card Number"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uId6" />

        <EditText
            android:id="@+id/uId6"
            android:layout_width="370dp"
            android:layout_height="53dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="21dp"
            android:background="#FDFDFD"
            android:hint="Enter Your Card Type"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uId5" />

        <EditText
            android:id="@+id/uId3"
            android:layout_width="370dp"
            android:layout_height="53dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="#FDFDFD"
            android:hint="Enter Your Password"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uId2" />

        <EditText
            android:id="@+id/uId4"
            android:layout_width="370dp"
            android:layout_height="53dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="21dp"
            android:background="#FDFDFD"
            android:hint="Enter Your Type"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uId3" />

        <EditText
            android:id="@+id/uId5"
            android:layout_width="370dp"
            android:layout_height="53dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="21dp"
            android:background="#FDFDFD"
            android:hint="Enter Your Account Number"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uId4" />

        <EditText
            android:id="@+id/uId2"
            android:layout_width="370dp"
            android:layout_height="53dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="21dp"
            android:background="#FDFDFD"
            android:hint="Enter Your Name"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uPassword" />

        <TextView
            android:id="@+id/dig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="107dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="107dp"
            android:layout_marginBottom="15dp"
            android:text="DIGITAL BANKING"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/etUserId"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg" />

        <TextView
            android:id="@+id/reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="152dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="152dp"
            android:layout_marginBottom="15dp"
            android:background="#F62515"
            android:text="CityTouch"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/dig"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/uId"
            android:layout_width="370dp"
            android:layout_height="53dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="5dp"
            android:background="#FDFDFD"
            android:hint="Enter Your Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@+id/uPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dig" />

        <EditText
            android:id="@+id/uPassword"
            android:layout_width="370dp"
            android:layout_height="53dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="23dp"
            android:background="#FFFFFF"
            android:hint="Enter Your Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uId" />

        <Button
            android:id="@+id/regApp"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#e00000"
            android:text="Apply for registration"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uId7" />

        <!-- New User divider -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>