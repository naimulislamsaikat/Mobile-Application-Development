<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    tools:context=".MainActivity">

    <!-- Language pill (top-right) -->
    <LinearLayout
        android:id="@+id/langContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_button_outline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/lang_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="EN"
            android:textColor="#F44336"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/lang_bn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="বাংলা"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toBottomOf="@id/langContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Username Input -->
    <EditText
        android:id="@+id/etUser"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_input"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:hint="Enter your Username"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_input"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:hint="Enter Your Password"
        android:inputType="textPassword"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/etUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Remember ID row -->
    <LinearLayout
        android:id="@+id/rememberRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchRemember"
            android:layout_width="48dp"
            android:layout_height="28dp"
            android:checked="true"
            android:thumbTint="#F44336"
            android:trackTint="#A6A2A2" />

        <TextView
            android:id="@+id/tvRemember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember ID"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Login Button -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="18dp"
        android:backgroundTintMode="add"
        android:text="Login"
        android:textAllCaps="false"
        android:background="@drawable/bg_button_red"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rememberRow" />

    <!-- Forgot link -->
    <TextView
        android:id="@+id/tvForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Forgot User ID/Password/PIN"
        android:textColor="#F44336"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnLogin" />

    <!-- Divider + New User -->
    <LinearLayout
        android:id="@+id/newUserRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/tvForgot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#929090" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  New User?  "
            android:textColor="@android:color/darker_gray" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#929090" />
    </LinearLayout>

    <!-- Register Outline Button -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_button_outline"
        android:text="Register with Citytouch"
        android:textColor="#F44336"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/newUserRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- QR image -->
    <ImageView
        android:id="@+id/qrImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/qr"
        android:contentDescription="qr"
        app:layout_constraintTop_toBottomOf="@id/btnRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Footer links -->
    <LinearLayout
        android:id="@+id/footerLinks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/qrImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvFaq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FAQ"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvAtm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ATM and Branch"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvContact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <!-- Legal small text -->
    <TextView
        android:id="@+id/tvLegal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="All rights reserved Copyright © 2025, City Bank PLC. V 8.2.4"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/footerLinks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>